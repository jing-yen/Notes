<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#fff</item>
        <item name="colorOnPrimary">#fff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#666</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#fff</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonTextStyleBold</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonTextStyle</item>
    </style>

    <style name="RedMaterialAlertDialog" parent="MaterialAlertDialog">
        <item name="colorSurface">@color/redBackground</item>
    </style>
    <style name="YellowMaterialAlertDialog" parent="MaterialAlertDialog">
        <item name="colorSurface">@color/yellowBackground</item>
    </style>
    <style name="GreenMaterialAlertDialog" parent="MaterialAlertDialog">
        <item name="colorSurface">@color/greenBackground</item>
    </style>
    <style name="BlueMaterialAlertDialog" parent="MaterialAlertDialog">
        <item name="colorSurface">@color/blueBackground</item>
    </style>
    <style name="PurpleMaterialAlertDialog" parent="MaterialAlertDialog">
        <item name="colorSurface">@color/purpleBackground</item>
    </style>
    <style name="GreyMaterialAlertDialog" parent="MaterialAlertDialog">
        <item name="colorSurface">@color/greyBackground</item>
    </style>
    <style name="MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/regular</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
    </style>
    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/regular</item>
    </style>
    <style name="ButtonTextStyleBold" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">#000</item>
    </style>
    <style name="ButtonTextStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">#000</item>
    </style>
</resources>